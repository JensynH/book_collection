<h1>Book Collection</h1>
<%= link_to 'Add New Book', new_book_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= number_to_currency(book.price) %></td>  <!-- Display Price -->
      <td>
        <div class="button-group">
          <%= link_to 'Show', book_path(book), class: 'btn' %>
          <%= link_to 'Update', edit_book_path(book), class: 'btn' %>
          <%= link_to 'Delete', confirm_delete_book_path(book), class: 'btn btn-danger' %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
